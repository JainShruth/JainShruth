<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#FF9933"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="bottom|center_horizontal">

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Jain Shruth"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/cinzel_regular"
        android:gravity="center" />

    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Jain Shruth Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/jainshruth_mylogo" /> <!-- Replace with your PNG -->

</LinearLayout>
