<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="72dp"
        android:paddingTop="12dp"
        android:background="#FF9933"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title=""
        app:navigationIcon="@drawable/ic_back"
        app:titleCentered="true">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jain Kahaniya"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/cinzel_regular"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="74dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Title and Share (Centered Correctly) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/kahaniTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पद्मरथ राजा की कथा"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF9933"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_invite"
                android:contentDescription="Share"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="12dp" />
        </FrameLayout>

        <!-- Writer -->
        <TextView
            android:id="@+id/kahaniWriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="आचार्य श्री"
            android:textSize="15sp"
            android:textColor="#D84215"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- WebView -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="#FFF8E1" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
