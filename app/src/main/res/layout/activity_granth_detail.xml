<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Buttons: Share & Close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="32dp"> <!-- Increased top padding -->

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_share1"
                android:background="@android:color/transparent"
                android:contentDescription="Share"
                android:layout_marginEnd="12dp"/>

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:tint="@android:color/black"
                android:background="@android:color/transparent"
                android:contentDescription="Close"/>
        </LinearLayout>

        <!-- Granth Image and Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Granth Image -->
            <ImageView
                android:id="@+id/detail_granth_image"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder_image"
                android:layout_marginEnd="16dp" />

            <!-- Title, Writer, Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_granth_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Granth Title"
                    android:textSize="18sp"
                    android:textColor="#A05200"
                    android:textStyle="bold"
                    android:fontFamily="@font/cinzel_regular"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/detail_granth_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Acharya"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />

                <!-- Vertical Button Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btn_add_library"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add to Library"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#A05200"/>

                    <Button
                        android:id="@+id/btn_read_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Read Now"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="#A05200"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Granth Description -->
        <TextView
            android:id="@+id/detail_granth_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Granth description will appear here..."
            android:textSize="17sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:justificationMode="inter_word"
            android:textAlignment="viewStart" />
    </LinearLayout>
</ScrollView>
