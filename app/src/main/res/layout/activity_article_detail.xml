<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    tools:context=".ArticleDetailActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="72dp"
        android:paddingTop="12dp"
        android:background="#FF9933"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_back"
        app:title=""
        app:titleCentered="true">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jain Articles"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/cinzel_regular"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="74dp">

        <!-- Title and Share Icon (Centered Title with FrameLayout) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article Title"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FF9933"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/share_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_invite"
                android:contentDescription="Share"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="12dp" />
        </FrameLayout>

        <!-- Writer Name -->
        <TextView
            android:id="@+id/article_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writer Name"
            android:layout_gravity="center" 
            android:textSize="14sp"
            android:textColor="#D84215"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

        <!-- WebView -->
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:background="#FFF8E1"
            android:overScrollMode="never"
            android:layout_marginBottom="25dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
